@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<h1>Restaurants</h1>

@if (Model.Count == 0)
{
  <p>You have no restaurants to display!</p>
}

@foreach (Restaurant restaurant in Model)
{ 
  <p>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId}) | @Html.ActionLink($"{restaurant.Cuisine.Name}", "Details", "Cuisines", new { id = restaurant.CuisineId} )</p>   
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("New Restaurant", "Create")</p>